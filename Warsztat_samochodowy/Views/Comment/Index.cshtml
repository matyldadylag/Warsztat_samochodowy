@model List<Warsztat_samochodowy.DTOs.CommentListDto>

<h2>Komentarze</h2>

<a asp-action="Create" asp-route-orderId="@ViewData["OrderId"]" class="btn btn-primary mb-3">
    Dodaj komentarz
</a>

<ul class="list-group mb-4">
    @foreach (var comment in Model)
    {
        <li class="list-group-item">
            <strong>@comment.Author</strong> <small>@comment.Timestamp.ToLocalTime()</small>
            <p>@comment.Content</p>
            <form asp-action="Delete" method="post" class="mt-2">
                <input type="hidden" name="id" value="@comment.Id" />
                <button type="submit" class="btn btn-sm btn-danger">Usuń</button>
            </form>
        </li>
    }
</ul>
