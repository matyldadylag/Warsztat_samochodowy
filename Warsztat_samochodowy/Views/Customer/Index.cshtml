@model List<Warsztat_samochodowy.DTOs.CustomerListDto>

@{
    ViewData["Title"] = "Lista Klientów";
}

<h2>Lista klientów</h2>

<form asp-action="Index" method="get" class="form-inline mb-3">
    <input type="text" name="searchString" class="form-control mr-2" placeholder="Szukaj klienta..." value="@Context.Request.Query["searchString"]" />
    <button type="submit" class="btn btn-primary">Szukaj</button>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Imię i nazwisko</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.FirstName @customer.LastName</td>
                <td>@customer.Email</td>
                <td>@customer.PhoneNumber</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-sm btn-warning">Edytuj</a>
                    <a asp-action="Delete" asp-route-id="@customer.Id" class="btn btn-sm btn-danger">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Create" class="btn btn-success">Dodaj nowego klienta</a>
</p>